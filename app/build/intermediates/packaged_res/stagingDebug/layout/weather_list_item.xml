<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                                           
                 
                            
                                                                                    
           

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp" android:tag="layout/weather_list_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weatherWrapper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:tag="binding_1"             
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="1/1/2020" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/weatherIcon"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:tag="binding_2"                           
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/weatherDescription"
                android:layout_width="wrap_content"
                style="@style/BaseRegularTextView"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:tag="binding_3"                        
                android:textAlignment="center"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/temp"
                app:layout_constraintBottom_toBottomOf="@+id/temp"
                app:layout_constraintTop_toBottomOf="@id/weatherIcon"
                tools:text="Clear" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/temp"
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_4"                                        
                android:textAlignment="center"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@+id/weatherIcon"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="20" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

         